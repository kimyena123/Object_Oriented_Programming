<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchIngredientFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_all_round"
        android:backgroundTint="#FFFFFF"
        tools:context=".BlankFragment">

        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="106dp"
            android:layout_height="46dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/editTextText3"
            tools:layout_editor_absoluteX="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" 재료 검색"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textSize="19sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="347dp"
            android:layout_height="48dp"
            android:background="@drawable/button_all_round"
            android:backgroundTint="#EBE8CDF0"
            android:ems="10"
            android:inputType="text"
            android:visibility="visible"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="126dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="48dp"
            android:layout_height="41dp"
            android:layout_marginTop="1dp"
            android:src="@android:drawable/ic_menu_search"
            app:layout_constraintBottom_toBottomOf="@+id/editTextText3"
            app:layout_constraintEnd_toEndOf="@+id/editTextText3"
            app:layout_constraintTop_toTopOf="@+id/editTextText3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>